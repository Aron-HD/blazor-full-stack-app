@page "/judges"
@inject NavigationManager NavigationManager
@inject IJudgeService JudgeService

<h1>Judges</h1>
@if (Judges.Count == 0)
{
    <span>Loading... </span>
}
else
{
    <div class="container mt-5 mb-5">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Role</th>
                    <th scope="col">Company</th>
                    @*<th scope="col">Email</th>*@
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Judge judge in JudgeService.Judges)
                {
                    <tr>
                        <th scope="row">@judge.Id</th>
                        <td>@judge.FirstName</td>
                        <td>@judge.LastName</td>
                        <td>@judge.Role</td>
                        <td>@judge.Company</td>
                        @*<td>@judge.Email</td>*@
                        <td>
                            <button class="btn btn-sm btn-warning" @onclick="(() => ShowHero(judge.Id))">Show</button>
                            <button class="btn btn-sm btn-primary" @onclick="(() => EditHero(judge.Id))">Edit</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="container mt-5 mb-5">
        <JudgeEditForm Title="Add Judge" />
    </div>
}

@code {
    [CascadingParameter] // from Shared.JudgesContext.razor
    public List<Judge> Judges { get; set; }

    void ShowHero(int id)
    {
        // JudgeInfo.razor
        NavigationManager.NavigateTo($"judges/{id}");
    }
    void EditHero(int id)
    {
        // JudgeInfo.razor
        NavigationManager.NavigateTo($"judges/{id}/edit");
    }
}